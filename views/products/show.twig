{% extends 'base.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <h1>Product Details</h1>
    {% if product %}
        <p><strong>Name:</strong> {{ product.name }}</p>
        <p><strong>Price:</strong> {{ product.price }}</p>
    {% else %}
        <p>No product found.</p>
    {% endif %}
{% endblock %}
